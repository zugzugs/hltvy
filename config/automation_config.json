{
  "data_collection": {
    "max_runtime_seconds": 18000,
    "max_results_offset": 25000,
    "retry_attempts": 3,
    "retry_delay_seconds": 2,
    "flaresolverr_timeout": 60000,
    "request_delay_seconds": 1
  },
  "data_limits": {
    "max_results_count": 10000,
    "max_upcoming_count": 500,
    "max_enriched_ids": 5000,
    "max_failed_urls": 500
  },
  "monitoring": {
    "data_freshness_hours": {
      "upcoming.json": 6,
      "results.json": 24,
      "scrape_state.json": 12
    },
    "file_size_limits": {
      "upcoming.json": {"min": 100, "max": 1000000},
      "results.json": {"min": 1000, "max": 100000000},
      "scrape_state.json": {"min": 50, "max": 10000}
    },
    "health_thresholds": {
      "min_odds_coverage": 0.3,
      "min_enrichment_rate": 0.2,
      "min_health_score": 70
    }
  },
